{% extends 'base.html.twig' %}

{% block title %}Hello SuiteController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-3">
            <div class="col-md-8">
                <a href="{{ path('app_suite', {id: suite.id}) }}" class="div-link">
                    <div class="card custom-opacity div-link border-0">
                        <img src="{{ asset('uploads/suite/images/' ~ suite.image) }}" class="img-fluid rounded-start" alt="Image suite">
                        <div class="card-body">
                            <h5 class="card-title">{{ suite.titre }}</h5>
                            <p class="card-text">{{ suite.description }}</p>
                            <p>{{ suite.prix | format_currency('EUR') }}</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
